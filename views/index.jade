            li.hidden
              a(href='#page-top')
            li.page-scroll
              a(href='#about') About
            li.page-scroll
              a(href='#whatwedo') What We Do
            li.page-scroll
              a(href='#team') Team 
            li.page-scroll
              a(href='#blog') Blog                                 
            li.page-scroll
              a(href='#contact') Contact
        //
           /.navbar-collapse 
      //
         /.container 

    // INTRO     
    
    section.intro
        .intro-body
            .container
              .row
                .col-md-12
                  img.logo(src='img/BEdark_noBG2.png')
                  h3
                    br
                    | Undergraduate Entrepreneurship at UCLA 
                  
                  // Social Links 
                  ul.list-inline.banner-social-buttons
                    li
                      a.btn.btn-homepage.btn-lg(href='https://twitter.com/bruinentreprenr', target='_blank')
                        i.fa.fa-twitter.fa-fw
                        span.network-name 
                    li
                      a.btn.btn-homepage.btn-lg(href='https://facebook.com/bruinentrepreneurs', target='_blank')
                        i.fa.fa-facebook.fa-fw  
                        span.network-name   
                  
                  // div container for fading elements
                  div(style='height:50px')
                      
                      // nodemailer form   
                      form.subscriptionForm(action='/signup', method='post', name='email registration', style='margin-top:20px')
                        input.email(type='email', value='', name='EMAIL', placeholder='Enter Email Address...', required='required', style='max-width:400px; margin-right:20px')
                        // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                        div(style='position: absolute; left: -5000px;')
                          input(type='text', name='b_95fffc4eb179e8cedecfbc026_469fdeb0f2', value='')
                        input.btn.btn-homepage.btn-lg.button.subscribe-btn(type='submit', value='Subscribe', name='subscribe', style='width:200px', onclick='$(".subscriptionForm").fadeOut(); $(".subscribeConfirmation").fadeIn()')                                      

                      .col-lg-12.subscribeConfirmation
                        p Thanks for subscribing to our mailing list! You will receive a confirmation email shortly.   

                  // Page Scroll Button
                  .page-scroll
                    a.btn.btn-circle(href='#about')
                      i.fa.fa-angle-double-down.animated

    // ABOUT              
    
    section#about.container.content-section.text-center
      .row
        .col-lg-8.col-lg-offset-2
          h2 About Bruin Entrepreneurs
          p
            | Founded in 2013, Bruin Entrepreneurs’ core mission is to facilitate entrepreneurship among UCLA undergraduates by providing resources, networking, and mentorship. Our aim is to assist students of all majors and levels of experience in starting their own businesses by providing educational facilities designed to introduce students to the basics of entrepreneurship through involvement and execution.

          p
            | We provide a community for entrepreneurial-minded students who share an interest in creative innovation - a productive and collaborative environment for business people, developers, and everyone in between to connect and share their talents. 

    // WHAT WE DO 
    
    section#whatwedo.whatwedo-section.content-section.text-center(style='background-color:#fff')
        .container
          .col-lg-8.col-lg-offset-2
            h2 What We Do 
          
          .col-lg-12(style='margin-top:25px')
              
              // BRUIN INCUBATOR
              .col-lg-4(style='padding-bottom:10px')
                .project-image(style='background-image: url(\'/img/bruinincubator2.jpg\'')   
              
              // LA HACKS
              .col-lg-4(style='padding-bottom:10px')
                .project-image(style='background-image: url(\'/img/lahacks2.png\'')  
              
              // PERFECT PITCH 
              .col-lg-4(style='padding-bottom:10px')
                .project-image(style='background-image: url(\'/img/perfectpitch.jpg\'')

                               
    // TEAM 
    
    section#team.content-section.text-center
      .container
        .row
          .col-lg-8.col-lg-offset-2
            h2 Our Team

        #myCarousel.carousel.slide
          //
            Wrapper for slides 
          .carousel-inner
            // 2013-2014 Board
            .item
              .fill(style='background-image: url(\'http://placehold.it/1200x300\'); height:400px')
                li.list-inline
                    a.team-image
                        img(src='http://placehold.it/150x150')
                  
                    a.team-image
                        img(src='http://placehold.it/150x150')     
                  
                    a.team-image
                        img(src='http://placehold.it/150x150') 

                    a.team-image
                        img(src='http://placehold.it/150x150')

              .carousel-caption
                h3 2013-2014 Founding Board
            
            // 2014-2015 Board
            .item.active
              .fill(style='background-image: url(\'http://placehold.it/1200x300\'); height:400px')
                li.list-inline
                    a.team-image
                        img(src='http://placehold.it/150x150')
                  
                    a.team-image
                        img(src='http://placehold.it/150x150')     
                  
                    a.team-image
                        img(src='http://placehold.it/150x150') 

                    a.team-image
                        img(src='http://placehold.it/150x150')
                  
              .carousel-caption
                h3 2014-2015 Executive Board
          //
            Indicators 
          ol.carousel-indicators
            li(data-target='#myCarousel', data-slide-to='0')
            li.active(data-target='#myCarousel', data-slide-to='1')    


    // BLOG
    
    section#blog.content-section.text-center
      .blog-section
        .container     
            // Medium Embed Script     
            script(async='async', src='https://static.medium.com/embed.js')
            a.m-profile(href='https://medium.com/@BruinEntrepreneurs', data-width='100%', data-border='false',background-color='#f1f1f1') Bruin Entrepreneurs                             

    // CONTACT
    
    section#contact.container.content-section.text-center  
      .row
        .col-lg-8.col-lg-offset-2
          h2 Contact Us  
        .col-lg-10.col-lg-offset-1
          form( action="/sendMail", method="POST", enctype="multipart/form-data")
           br
           ul.col-lg-5(style='font-size:13pt; list-style-type:none')
             li
               input#name.name(type='text', name='name', placeholder='Name', required='required')
             li
               input#email.email(type='email', name='email', placeholder='Email Address', required='required') 
             li
               input#subject.subject(type='text', name='subject', placeholder='Subject', required='required')                              
           ul.col-lg-7(style='font-size:13pt; list-style-type:none')
             li
               textarea#message.message(name='message', placeholder='Enter Your Message...', style='height:100px', required='required')
           .col-lg-12
           br
           input.btn.btn-default.btn-lg(type="submit", value="Send")

          br
      .signature 
        p © Bruin Entrepreneurs 2014. All Rights Reserved. 
    
