      .bg-overlay
      .row
        .col-lg-8.col-lg-offset-2
          h1.section-heading.white Week 1
          h3.section-subheading.white VOLLEYBALL TOURNAMENT
          p
            b.section-subheading August 24 | Hermosa Beach Pier, CA

          // div container for fading elements
          div(style='height:120px')

            // nodemailer form   
            form.signupForm(action='/signup', method='post', name='email registration', style='margin-top:20px')
